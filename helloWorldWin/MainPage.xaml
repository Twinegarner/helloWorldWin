<Page
    x:Class="helloWorldWin.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:helloWorldWin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Button x:Name="sayHelloButton" Content="say hello" Margin="0,397,0,0" VerticalAlignment="Top" Height="65" Width="126" HorizontalAlignment="Center" Click="sayHelloButton_click"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Center" Margin="0,245,0,0" Text="Hello there!" TextWrapping="Wrap" VerticalAlignment="Top" Height="80" Width="380" FontSize="36" TextAlignment="Center" BorderThickness="1,1,8,8"/>

    </Grid>
</Page>
